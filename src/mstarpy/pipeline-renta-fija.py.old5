# =========================
# PROCESAR FONDO
# =========================
def process_fondo(fondo, collection):
    isin = fondo["isin"]
    print(f"ðŸ” Procesando {isin}")

    funds = Funds(isin)

    # --- Allocation ---
    allocation_map = funds.allocationMap()
    tipo_rf, tramo_rf = classify_rf(allocation_map)


    # --- Performance ---
    perf_raw = funds.performanceTable()

    returns = {}
    table = perf_raw.get("table", {})
    columns = table.get("columnDefs", [])
    rows = table.get("growth10KReturnData", [])

    fund_row = next(
        (r for r in rows if r.get("label") == "fund"), None
    )

    if fund_row:
        for col, val in zip(columns, fund_row.get("datum", [])):
            returns[col] = safe_float(val)

    # --- Risk ---
    risk_raw = funds.riskVolatility()
    risk_blocks = {}

    fund_risk = risk_raw.get("fundRiskVolatility", {})

    for period in ["for1Year", "for3Year", "for5Year", "for10Year"]:
        data = fund_risk.get(period)
        if data:
            risk_blocks[period] = {
                "volatility": safe_float(data.get("standardDeviation")),
                "sharpe": safe_float(data.get("sharpeRatio"))
            }

    # --- Duration & Sensibilidad ---
    duration_data = extract_duration(funds)
    #sensibilidad_tipos = classify_sensibilidad(duration_data)
    sensibilidad_tipos = calcular_sensibilidad_tipos(tramo_rf)

    # =========================
    # DOCUMENTO FINAL
    # =========================
    doc = {
        "isin": isin,
        "nombre": fondo.get("nombre"),
        "categoria": allocation_map.get("categoryName"),

        "tipo_rf": tipo_rf,
        "tramo_rf": tramo_rf,
        "sensibilidad_tipos": sensibilidad_tipos,

        "rentabilidad": {
            "historica": returns
        },

        "riesgo": risk_blocks,
        "duration": duration_data,

        "allocation_map": allocation_map,
        "rentabilidad_raw": perf_raw,
        "riesgo_raw": risk_raw,

        "updated_at": datetime.now(UTC)
    }

    # ================================
    # DURACIÃ“N REAL DESDE fixedIncomeStyle
    # ================================

    duration_data = {
        "avg_effective_duration": None,
        "modified_duration": None,
        "avg_effective_maturity": None,
        "yield_to_maturity": None,
        "avg_credit_quality": None
    }

    category_duration_data = {
        "avg_effective_duration": None,
        "modified_duration": None,
        "avg_effective_maturity": None,
        "yield_to_maturity": None,
        "avg_credit_quality": None
    }

    try:
        fi_style = funds.fixedIncomeStyle()

        if fi_style and fi_style.get("fund"):
            fund_data = fi_style["fund"]

            duration_data = {
                "avg_effective_duration": fund_data.get("avgEffectiveDuration"),
                "modified_duration": fund_data.get("modifiedDuration"),
                "avg_effective_maturity": fund_data.get("avgEffectiveMaturity"),
                "yield_to_maturity": fund_data.get("yieldToMaturity"),
                "avg_credit_quality": fund_data.get("avgCreditQualityName"),
            }

        if fi_style and fi_style.get("categoryAverage"):
            cat_data = fi_style["categoryAverage"]

            category_duration_data = {
                "avg_effective_duration": cat_data.get("avgEffectiveDuration"),
                "modified_duration": cat_data.get("modifiedDuration"),
                "avg_effective_maturity": cat_data.get("avgEffectiveMaturity"),
                "yield_to_maturity": cat_data.get("yieldToMaturity"),
                "avg_credit_quality": cat_data.get("avgCreditQualityName"),
            }

    except Exception as e:
        print(f"[WARNING] No se pudo obtener fixedIncomeStyle para {isin}: {e}")

    # Guardamos en el documento principal
    doc["duration"] = duration_data
    doc["category_duration"] = category_duration_data

    collection.update_one(
        {"isin": isin},
        {"$set": doc},
        upsert=True
    )

    print(f"ðŸ“ OK {isin} | {tipo_rf} | {tramo_rf}")


# =========================
# MAIN
# =========================
def main():
    collection = get_mongo_collection()

    with open("../../assets/json/fondos_prueba.json", "r", encoding="utf-8") as f:
        data = json.load(f)

    fondos = [f for f in data if isinstance(f, dict) and "isin" in f]

    for fondo in fondos:
        try:
            process_fondo(fondo, collection)
            time.sleep(2)
        except Exception as e:
            print(f"âŒ Error procesando {fondo}: {e}")


if __name__ == "__main__":
    main()
